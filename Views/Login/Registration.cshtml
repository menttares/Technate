@{
    ViewData["Title"] = "Регистрация";
}


<div class="auth-form">
    <form class="auth-form__form-container" method="post">
        <div class="auth-form__title">АВТОРИЗАЦИЯ</div>
        <div class="auth-form__description">
            введите ваши данные
        </div>
        <input class="auth-form__input" name="username" type="text" placeholder="Имя" />
        <input class="auth-form__input" name="email" type="email" placeholder="Email" />
        <input class="auth-form__input" name="password" type="password" placeholder="Пароль" />

        <div id="auth-form__button">
            <div>Войти</div>
        </div>

        <a href="#" class="auth-form__forgot-password">
            Забыли пароль?
        </a>
    </form>
    <div class="auth-form__description-container">
        <div class="auth-form__welcome">
            Добро Пожаловать!
        </div>
        <div class="auth-form__welcome-description">
            <p>
                у вас есть аккаунт на нашем сайте? Нажмите накнопку, чтобы перейти к авторзации!
            </p>
        </div>
        <div class="auth-form__button-invers">
            <a href="Authorization">авторизация</a>
        </div>


    </div>
</div>

<script>
    const btn = document.getElementById("auth-form__button");
    btn.addEventListener('click', function (e) {
        Registration();
    })
</script>